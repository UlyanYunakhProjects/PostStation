@model Developer
@{
    ViewBag.Title = "Изменить разработчика";
}

@await Html.PartialAsync("_Navbar", Navbar.Current.Developers)

<form asp-action="DevelopersEdit" asp-route-id="@Model.Id">

    <div class="form-floating my-2">
        <input type="text" class="form-control" id="name" placeholder="Name" asp-for="Name" required>
        <label for="name" asp-for="Name">Название</label>
    </div>

    <div class="form-floating mb-2">
        <select class="form-select" id="country" aria-label="select" asp-for="CountryId">
            <option>None</option>
            @foreach (Country country in ViewBag.Countries)
            {
                <option value="@country.Id">@country.Name</option>
            }
        </select>
        <label for="country" asp-for="CountryId">Страна</label>
    </div>

    <div class="form-group d-grid gap-2">
        <button type="submit" class="btn btn-primary" type="button">Сохранить</button>
    </div>

</form>